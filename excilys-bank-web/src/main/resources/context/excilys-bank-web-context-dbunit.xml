<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="com.excilys.ebi.spring.dbunit.servlet.DataLoaderListenerConfiguration">
		<property name="disable" value="${spring-dbunit.disable}" />
		<property name="dbType" value="${spring-dbunit.dbType}" />
		<property name="dataSetsLocations" value="${spring-dbunit.dataSets}" />
		<property name="dtdLocation" value="${spring-dbunit.dtdLocation}" />
	</bean>

	<bean class="com.excilys.ebi.spring.dbunit.config.GlobalConfiguration">
	<property name="batchedStatements" value="${spring-dbunit.batchedStatements}" />
	</bean>
</beans>

